{
  "name": "sanovskiy/simple-object",
  "description": "Simple ORM for MySQL and MSSQL",
  "type": "library",
  "keywords": [
    "ORM"
  ],
  "license": "Apache-2.0",
  "require": {
    "php": "~8.0",
    "ext-pdo": "*",
    "ext-json": "*",
    "sanovskiy/traitlib": "*",
    "envms/fluentpdo": "*",
    "league/climate": "*",
    "nette/php-generator": "^3.5",
    "nilportugues/sql-query-builder": "^1.8"
  },
  "require-dev": {
    "robmorgan/phinx": "*",
    "monolog/monolog": "*"
  },
  "suggest": {
    "monolog/monolog": "Allows logging from SimpleObject core functions",
    "robmorgan/phinx": "Allows creating migrations"
  },
  "authors": [
    {
      "name": "Pavel Terentyev",
      "email": "pavel.terentyev@gmail.com",
      "role": "Developer"
    },
    {
      "name": "Dmitry Shtygin",
      "email": "mimas@list.ru",
      "role": "Contributor"
    }
  ],
  "autoload": {
    "psr-4": {
      "Sanovskiy\\SimpleObject\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Models\\": "App/Models"
    }
  }
}
